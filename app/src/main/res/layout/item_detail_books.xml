<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/item_collection_book"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/list_book"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="6dp"
            app:cardMaxElevation="4dp">

            <ImageView
                android:id="@+id/cover_book_list_view"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="false"
                android:elevation="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/no_cover_book" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title_book"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/inter_bold"
            android:text="HOWARD HUGHES THE HIDDEN YEARS"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="14dp"
            android:autoSizeMinTextSize="10dp"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/author_book"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:layout_marginTop="55dp"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawableTint="@color/tab_layout_on"
            android:paddingStart="2dp"
            android:text="EDWARD SCANNEL, JHON NEWSTROM"
            android:textColor="@color/black"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="14dp"
            android:autoSizeMinTextSize="10dp"/>

        <TextView
            android:id="@+id/year_book"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:layout_marginTop="80dp"
            android:drawableLeft="@drawable/baseline_bookmark_24"
            android:drawableTint="@color/tab_layout_on"
            android:paddingStart="2dp"
            android:text="2022"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/category_book"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:layout_marginTop="105dp"
            android:drawableLeft="@drawable/baseline_book_24"
            android:drawableTint="@color/tab_layout_on"
            android:paddingStart="2dp"
            android:text="Book"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/materialCardView"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="100dp"
            app:cardBackgroundColor="#0f4c75"
            app:cardCornerRadius="8dp"
            android:maxWidth="110dp"
            android:minWidth="70dp"
            android:maxHeight="30dp"
            android:minHeight="30dp">

            <TextView
                android:id="@+id/rak"
                android:paddingHorizontal="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Rak Kesenian, Hiburan dan Olahraga"
                android:textColor="@color/white"
                android:maxLines="2"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="14dp"
                android:autoSizeMinTextSize="10dp"/>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>
</RelativeLayout>