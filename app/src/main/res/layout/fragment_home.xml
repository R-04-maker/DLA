<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_home"
    tools:context=".ui.fragment.HomeFragment">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="top"
        android:scaleType="fitXY"
        android:src="@drawable/upper_bg_home_frag"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_search"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="290dp"
        android:layout_marginBottom="125dp"
        android:src="@drawable/baseline_search_24"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <EditText
        android:id="@+id/searchBtn"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="125dp"
        android:background="@drawable/textbox_search"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        android:hint="Search"
        android:paddingStart="12dp"
        android:textSize="7pt"
        android:enabled="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:paddingRight="8dp"
                    android:text="Hi"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/login_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="Bobby"
                    android:textColor="@color/white"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.69"
                    android:fontFamily="@font/inter_bold"
                    android:text="You're Logged in as "
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/login_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.69"
                    android:fontFamily="@font/inter_bold"
                    android:text="Librarian"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_marginHorizontal="5dp"
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="200dp"
        android:src="@drawable/card_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"
                android:src="@drawable/card_book" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/book_count"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:fontFamily="@font/inter_bold"
                    android:paddingTop="5dp"
                    android:text="0"
                    android:textColor="#17557E"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="20dp"
                    android:autoSizeMaxTextSize="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.69"
                    android:fontFamily="@font/inter_bold"
                    android:text="Book"
                    android:textColor="#17557E"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="65dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"
                android:src="@drawable/card_person" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/visitors_count"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="0"
                    android:textColor="#17557E"
                    android:paddingTop="5dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="20dp"
                    android:autoSizeMaxTextSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.69"
                    android:fontFamily="@font/inter_bold"
                    android:text="Visitors"
                    android:textColor="#17557E"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="65dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"
                android:src="@drawable/card_hist" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/history_count"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="0"
                    android:textColor="#17557E"
                    android:paddingTop="5dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="20dp"
                    android:autoSizeMaxTextSize="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.69"
                    android:fontFamily="@font/inter_bold"
                    android:text="History"
                    android:textColor="#17557E"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5">

        <LinearLayout
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_variablefont_slnt_wght"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:paddingRight="40dp"
                    android:paddingBottom="45dp"
                    android:text="Newest Released"
                    android:textSize="18sp"
                    android:textColor="@color/black" />

<!--                <TextView
                    android:id="@+id/see_all_newest_adm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_variablefont_slnt_wght"
                    android:paddingLeft="310dp"
                    android:paddingTop="15dp"
                    android:text="See All"
                    android:onClick="searchIntent"
                    android:textColor="@color/black"
                    android:textSize="14sp" />-->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_newest_book"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="45dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"
                    android:scrollbars="horizontal" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_variablefont_slnt_wght"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:paddingRight="40dp"
                    android:paddingBottom="45dp"
                    android:text="Newest Collection"
                    android:textSize="18sp"
                    android:textColor="@color/black" />
<!--                <LinearLayout
                    android:id="@+id/SeeAllLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/see_all_newestcollection_adm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter_variablefont_slnt_wght"
                        android:paddingLeft="310dp"
                        android:paddingTop="15dp"
                        android:text="See All"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>-->
<!--                <TextView
                    android:id="@+id/see_all_newestcollection_adm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_variablefont_slnt_wght"
                    android:paddingLeft="310dp"
                    android:paddingTop="15dp"
                    android:text="See All"
                    android:clickable="true"
                    android:textColor="@color/black"
                    android:textSize="14sp" />-->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_popular_books"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="45dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"
                    android:scrollbars="horizontal" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>