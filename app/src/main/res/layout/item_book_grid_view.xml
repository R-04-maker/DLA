<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    android:paddingHorizontal="3dp">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="200dp"
        app:cardMaxElevation="2dp"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_book_list"
                android:layout_width="wrap_content"
                app:cardCornerRadius="6dp"
                app:cardMaxElevation="4dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/cover_book_grid_view"
                    android:layout_width="115dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/no_cover_book"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/title_book_grid_view"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/card_book_list"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:autoSizeMaxTextSize="12sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeTextType="uniform"
                android:maxLines="2"
                android:fontFamily="@font/inter_variablefont_slnt_wght"
                android:gravity="center"
                android:text="Sistem Informasi"
                android:textColor="#000" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>